                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>

                    <button class="btn btn-block modal_btn" type="submit">
                        Se connecter
                    </button>
                </form>
