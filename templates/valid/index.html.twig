{% extends 'base.html.twig' %}

{% block title %}Hello ValidController!{% endblock %}

{% block body %}
    <div class="zaebal" style="font-size: 17px">
        {% if app.user %}
            <div class="container-fluid text-center py-2">
                <h1 class="font_color">Adresse de livraison</h1>
            </div>

            <form action="" method="post" accept-charset="utf-8">
                <div class="d-flex flex-wrap py-3">
                    <div class="col-lg-6 col-sm-12 px-5">

                        <input type="hidden" name="id" value="{{ user.client.id }}">

                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="name">Prénom</label>
                            <div class="col-lg-9 col-sm-12">
                                <input class="form-control" type="text"
                                       value="{{ user.client.name }}"
                                       name="name" id="name">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="surname">Nom</label>
                            <div class="col-lg-9 col-sm-12">
                                <input class="form-control" type="text"
                                       value="{{ user.client.surname }}"
                                       name="surname" id="surname">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="address">Téléphone</label>
                            <div class="col-lg-9 col-sm-12">
                                <input class="form-control" type="text"
                                       value="{{ user.client.tel }}"
                                       name="tel" id="tel">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 px-5">
                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="address">Adresse</label>
                            <div class="col-lg-9 col-sm-12">
                                <input class="form-control" type="text"
                                       value="{{ user.client.address }}"
                                       name="address" id="address">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="zipcode">Code postal</label>
                            <div class="col-lg-9 col-sm-12">
                                <input readonly class="form-control" type="text"
                                       value="{{ user.client.zipcode }}"
                                       name="zipcode" id="zipcode">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-flex flex-wrap">
                            <label class="control-label col-lg-3 col-sm-12"
                                   for="city">Ville</label>
                            <div class="col-lg-9 col-sm-12">
                                <input readonly class="form-control" type="text"
                                       value="{{ user.client.city }}"
                                       name="city" id="city">
                                <div class="text-danger">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid text-center py-2">
                    <h1 class="font_color pt-5">Paiement</h1>
                </div>
                <div class="d-flex flex-wrap py-3">
                    <div class="offset-2 col-lg-4 col-md-4 col-sm-10 px-5 py-3">
                        <div class="form-check d-flex flex-wrap">
                            <input class="form-check-input" type="radio" name="payer"
                                   id="exampleRadios1" value="0" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                En espèces au coursier
                            </label>
                            <img src="{{'/assets/images/BODY/cash.png'}}" width="80">
                        </div>
                    </div>
                    <div class="offset-2 col-lg-4 col-md-4 col-sm-10 px-5 py-3">
                        <div class="form-check d-flex flex-wrap">
                            <input class="form-check-input" type="radio" name="payer"
                                   id="exampleRadios2" value="1">
                            <label class="form-check-label" for="exampleRadios2">
                                Par carte bancaire
                            </label>
                            <img src="{{'/assets/images/BODY/cb.png'}}">
                        </div>
                    </div>
                </div>
                <div class="text-center py-5">
                    <button type="submit" class="cart_button" name="save">
                        {# Procéder au paiement#}
                        Passer à l'étape suivante
                    </button>
                </div>
            </form>
        {% endif %}
    </div>
{% endblock %}
