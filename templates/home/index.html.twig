{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://localhost:8000/assets/images/home/home.jpg" class="d-block img-fluid home_slider"
                     alt="home"
                     style="filter: brightness(60%)">
                <div class="carousel-caption">
                    <span class="promo-content">
                        <span class="title">Bonjour à tout le monde</span>
                        <span class="decor d-none d-md-block"><i class="icon icon-rosh"></i></span>
                        <span class="note">
                            Notre magasin Saveurs d'Arménie est ravi de vous accueillir et de vous proposer ses services, ses produits frais, ainsi qu’un choix varié de produits traditionnels d'Arménie, de Géorgie, de Pologne, d'Ukraine, de Roumanie, de Russie...
                        </span>
                    </span>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://localhost:8000/assets/images/subcats/caviar.png" class="d-block img-fluid home_slider"
                     alt="caviar"
                     style="filter: brightness(40%)">
                <div class="carousel-caption">
                    <span class="promo-content">
                        <a href="{{ path('prodlist2', {id:13}) }}">
                            <span class="title">{{ categories[2].subcats[3].title }}</span>
                        </a>
                        <span class="decor"><i class="icon icon-rosh"></i></span>
                        <span class="note d-none d-md-block">{{ categories[2].subcats[3].text }}</span>
                    </span>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://localhost:8000/assets/images/subcats/brandy.jpg" class="d-block img-fluid home_slider"
                     alt="brandy"
                     style="filter: brightness(40%)">
                <div class="carousel-caption">
                    <span class="promo-content">
                        <a href="{{ path('prodlist2', {id:2}) }}">
                            <span class="title">{{ categories[0].subcats[1].title }}</span>
                        </a>
                        <span class="decor">
                            <i class="icon icon-rosh"></i>
                        </span>
                        <span class="note d-none d-md-block">{{ categories[0].subcats[1].text }}</span>
                    </span>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://localhost:8000/assets/images/subcats/khinkali.jpg" class="d-block img-fluid home_slider"
                     alt="khinkali"
                     style="filter: brightness(40%)">
                <div class="carousel-caption">
                    <span class="promo-content">
                        <a href="{{ path('prodlist2', {id:30}) }}">
                            <span class="title">{{ categories[5].subcats[1].title }}</span>
                        </a>
                        <span class="decor">
                            <i class="icon icon-rosh"></i>
                        </span>
                        <span class="note d-none d-md-block">{{ categories[5].subcats[1].text }}</span>
                    </span>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://localhost:8000/assets/images/subcats/vin_geo.jpg" class="d-block img-fluid home_slider"
                     alt="vin georgien"
                     style="filter: brightness(40%)">
                <div class="carousel-caption">
                    <span class="promo-content">
                        <a href="{{ path('prodlist2', {id:1}) }}">
                            <span class="title">{{ categories[0].subcats[0].title }}</span>
                        </a>
                        <span class="decor">
                            <i class="icon icon-rosh"></i>
                        </span>
                        <span class="note d-none d-md-block">{{ categories[0].subcats[0].text }}</span>
                    </span>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="banner-content"></div>
    {#    {{ dump(categories[2].subcats) }} #}

    <div class="d-flex flex-wrap pt-2 pb-2">
        {% set count = 0 %}
        {% for category in categories %}
            {% if count < 9 %}
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 p-1">
                    <div class="overlay-image">
                        <a href="{{ path('subcatlist', { id: category.id}) }}">
                            {#                            {% if (category.subcats|first.products|first) %} #}
                            <img class="w-100" src="/assets/images/cats/{{ category.picture }}"
                                    {# "/assets/images/PRODUCTS/{{ (category.subcats|first.products|first).picture }}" #}
                                 alt="{{ category.name }}" height="183"/>
                            {#                            {% endif %} #}
                            <div class="hover">
                                <div class="cathover border border-dark">
                                    <span class="title">
                                        {{ category.name }}
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                {% set count = count+1 %}
            {% endif %}
            {#            {{ dump(category.subcats) }} #}
        {% endfor %}
    </div>
{% endblock %}