{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <div class="cart">
        {% for flash_success in app.flashes('danger') %}
            <div class="alert alert-danger" role="alert">{{ flash_success }}</div>
        {% endfor %}
        <nav aria-label="breadcrumb" class="py-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Panier</li>
            </ol>
        </nav>
        {% if cart %}
            {{ dump(app.session.get('cart')) }}
            <table class="table-responsive-sm col-10" style="margin: auto">
                <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th></th>
                </tr>
                </thead>
                {% set total =0 %}
                {% set quantity =0 %}
                {% for  key,row in cart %}
                    {% if key matches '/^\\d+$/' %}
                        <tr  id="prod{{ key }}">
                            <td style="vertical-align: middle"><img class="img-fluid img_cart" alt="{{ row.name }}"
                                     src="/assets/images/PRODUCTS/{{ row.picture }}"></td>
                            <td style="vertical-align: middle">{{ row.name }}</td>
                            <td style="vertical-align: middle">{{ row.description | raw }}</td>
                            <td style="vertical-align: middle">{{ row.price }}</td>
                            <td style="vertical-align: middle">
                                <form action="{{ path('cart_update') }}" method="POST">
                                    <input hidden name="id" id="{{ key }}" value="{{ key }}">
                                    <div class="d-flex">
                                        <button class="btn btn-link px-2" style="height: 25px"
{#                                             onclick="this.parentNode.querySelector('input[type=number]').stepDown()"#}
                                             onclick="updateCountCart(this.form, {{ key }}, -1)"
                                        >
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" class="form-control-xl" name="qty" id="qty[{{ key }}]"
                                               value="{{ row.qty }}" min="1" max="{{ row.stock }}"
                                               onchange="this.form.submit()"
{#                                               onchange="updateProduct(this.form)"#}
                                               style="width: 30px; border: none">
                                        <button class="btn btn-link px-2" style="height: 25px"
{#                                             onclick="this.parentNode.querySelector('input[type=number]').stepUp()"#}
                                             onclick="updateCountCart(this.form, {{ key }}, 1)"
                                        >
                                            <i class="fas fa-plus"></i>
                                        </button>
{#                                        <input type="number" class="form-control" name="qty" id="qty[{{ key }}]"#}
{#                                               value="{{ row.qty }}" min="0" max="{{ row.stock }}"#}
{#                                               onchange="updateProduct(this.form)">#}
                                    </div>
                                </form>
                                {# <p style="font-size: smaller" class="pt-2">{{ row.stock }} piéces disponible</p> #}
                            </td>
                            <td style="vertical-align: middle">
                                <form action="{{ path('cart_delete') }}" method="POST">
                                    <input hidden name="id" value="{{ key }}">
                                    <input hidden class="form-control" name="qty" id="qty[{{ key }}]" value="0">
                                    <button type="submit">
                                        <i class="fas fa-trash fa-xs" style="color: #B0413E"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% set total = total + row.qty*row.price %}
                        {% set quantity = quantity + row.qty %}
                    {% endif %}
                {% endfor %}
                <tr>
                    <td colspan="3">
                        <h3>Total ({{ quantity }} article{% if quantity >1 %}s{% endif %}) :</h3>
                    </td>
                    <td colspan="2" class="text-success">
                        <h3>{{ total }} €</h3>
                    </td>
                    <td>
                        {% if app.user %}
                            <a href="{{ path('valid') }}" class="add_cart">Valider</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="add_cart">Valider</a>
                        {% endif %}
                    </td>
                </tr>
            </table>
        {% else %}
            <div class="text-center pl-3 pr-3"
                 style="height: 80px; background-color: #989100;
                 vertical-align: middle; display: table-cell">
                <h1>Votre panier est vide.
                    <a href="{{ path('prodlist') }}">
                        Bienvenue à le remplir
                    </a>
                </h1>
            </div>
        {% endif %}
    </div>
    </div>
{% endblock %}