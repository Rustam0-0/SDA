{% extends 'base.html.twig' %}

{% block title %}Saveurs d'Armenie{% endblock %}

{% block body %}


    <div class="zaebal d-flex flex-wrap justify-content-center">
        <div class="registration pb-10">
            {{ form_start(form) }}
                <div class="container-fluid text-center">
                    <h1 class="font_color">VOS COORDONNÉES DE FACTURATION</h1>
                </div>
                <div class="d-flex flex-wrap py-3">
                    <div class="col-lg-6 col-md-6 col-sm-12 px-4">
                        {{ form_row(form.surname) }}<br>
                        {{ form_row(form.name) }}<br>
                        {{ form_row(form.tel) }}
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 px-4">
                        {{ form_row(form.address) }}<br>
                        {{ form_row(form.zipcode) }}<br>
                        {{ form_row(form.city) }}
                    </div>
                </div>
                <div class="text-center pt-5">
                    {{ form_row(form.save) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{#    <div class="registration_picture"></div>#}
{% endblock %}
