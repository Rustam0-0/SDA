{% extends 'base.html.twig' %}

{% block title %}Saveurs d'Armenie{% endblock %}

{% block body %}
    <div class="registration">
        <div class="container zaebal" style="font-size: large">
            <div class="container-fluid text-center">
                <h1 class="font_color">Créez vos identifiants</h1>
            </div>
            {{ form_start(form) }}
            <div class="d-flex flex-wrap py-3">
                <div class="col-lg-6 col-sm-12 px-5">
                    {{ form_row(form.email) }}<br>
                </div>
                <div class="col-lg-6 col-sm-12 px-5">
                    {{ form_row(form.password) }}<br>
                </div>
            </div>

            <div class="container-fluid text-center">
                <h1 class="font_color">VOS COORDONNÉES DE FACTURATION</h1>
            </div>
            <div class="d-flex flex-wrap py-3">
                <div class="col-lg-6 col-sm-12 px-5">
                    {{ form_row(form.surname) }}<br>
                    {{ form_row(form.name) }}<br>
                    {{ form_row(form.tel) }}
                </div>
                <div class="col-lg-6 col-sm-12 px-5">
                    {{ form_row(form.address) }}<br>
                    {{ form_row(form.zipcode) }}<br>
                    {{ form_row(form.city) }}
                </div>
            </div>
            <div class="text-center py-5">
                {#                <button type="submit" class="btn valider" name="save"> #}
                {{ form_row(form.save) }}
                {#                </button> #}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
